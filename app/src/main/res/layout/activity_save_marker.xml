<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ap.edu.sqlmap.SaveMarkerActivity">

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Beschrijving:"
        tools:layout_editor_absoluteY="36dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextDiscription"
        android:layout_width="357dp"
        android:layout_height="122dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Zit hier jouw beschrijving van de locatie"
        tools:layout_editor_absoluteY="66dp"
        tools:layout_editor_absoluteX="14dp"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonAddMarker"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Add location and marker to the map"
        tools:layout_editor_absoluteY="209dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignBottom="@+id/textViewDescription"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
